extends layout

block content
  h1 Author: #{author.name}
  p= author.lifespan

  if book_list.length
    p.text-danger #[strong Delete the following books before attempting to delete this author]

    div(style="margin-left:20px")
      h4 Books
      dl
        each book in book_list
          dt
            a(href=book.url) #{book.title}
          dd= book.summary

  else
    p Do you really want to delete this Author?

    form(action="" method="POST")
      input(type='hidden' id='authorid' name='authorid' value=author._id)
      button.bnt.btn-danger(type='submit') Delete Author
