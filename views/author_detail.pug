extends layout

block content
  h1 Author: #{author.name}
  p #{author.lifespan}

  div(style='margin-left:20px;margin-top:20px')
    dl
      h4 Books
      each book in book_list
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p No book from this author in the library.

  hr
  p
    a(href=author.url+'/delete') Delete Author